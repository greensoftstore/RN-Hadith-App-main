{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "jsx": "react",
        "lib": [
            "es6"
        ],
        "moduleResolution": "node",
        "noEmit": true,
        "strict": true,
        "target": "esnext",
        "baseUrl": "./src",
    },
    "typeAcquisition": {
        "exclude": []
    },
    "include": [
        "src",
        "/assets/*",
        "/components/*",
        "/constantsConfiguration/*",
        "/redux/*",
        "/screens/*",
        "/services/*",
        "/hoc/*",
        "/api/*",
        "/hooks/*",
        "/navigation/*",
        "/utilities/*"
    ],
    "exclude": [
        "node_modules",
        "babel.config.js",
        "metro.config.js",
    ]
}